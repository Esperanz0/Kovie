<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.wisnu.moviedb.costumview.MovieImageView
            android:id="@+id/image_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_movie_poster"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/medium_padding"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/nonFocus"
            android:textSize="@dimen/rating_size"
            tools:text="Rating 5.8" />

        <TextView
            android:id="@+id/movie_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/image_movie_poster"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/medium_padding"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/nonFocus"
            android:textSize="@dimen/rating_size"
            tools:text="Popularity 5.8" />

    </RelativeLayout>

</android.support.v7.widget.CardView>